.wrapper
  .content
    .bread-crum-wrapper
      .bread-crum(
        ng-repeat="section in sections"
      )   
        .bubble(
          ng-class="{'filled': section.completed, 'current': $index === current}"
          ng-click="bubbleClicked(section)"
        )
        .title {{section.title}}
        
    .body(
      ui-view="section"
    )

    .bottom
      button.back.btn(
        ng-if="current > 0"
        ng-click="save(); back()"
      ) 
        i.fa.fa-arrow-left
        | Back
        
      button.next.btn.btn-primary(
        ng-if="current < sections.length - 1"
        ng-click="save(); next()"
      ) 
        i.fa.fa-arrow-right
        | Save & Continue
