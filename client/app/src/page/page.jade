  button.publish.btn.btn-primary(
    ng-if="!showPublishModal"
    style="z-index: 2;"
    ng-click="publish()"
  )
    i.fa.fa-star
    | Publish {{page.pet.name}}'s Page
    
  button.edit.btn.btn-warning(
    style="z-index: 2;"
    ui-sref="page"
    ng-click="edit()"
  )
    i.fa.fa-edit
    | {{isEditMode ? "Preview" : "Edit"}}
  
