#page(
  ng-class="{'blur': showEditModal}"
)  
  .container.first
    .row
      .col-md-6
        .name {{page.pet.name}}
        .date {{page.pet.date_of_birth | date:'MMM d, yyyy'}} - {{page.pet.date_of_rest | date:'MMM d, yyyy'}}
        .biography
          p(
            ng-bind-html="page.biography"
          )
          
      .col-md-6
      
  section(
    style="background-color: teal; border-top: 1px solid white; border-bottom: 1px solid white;"
  )
    .container.middle
      .row
        .col-md-6
          img(
            ng-src="{{slides[0].image}}"
          )
          img(
            ng-src="{{slides[1].image}}"
          )
          img(
            ng-src="{{slides[2].image}}"
          )
