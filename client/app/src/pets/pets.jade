#pets
  h1 select your pet below
  
  a(
    ng-click="logout()"
  ) Logout
  
  .pet(
    ng-repeat="pet in pets"
    ng-style="{'background-image': 'url(' + pet.banner + ')'}"
    ng-click="gotoView(pet)"
  )
    .banner(
      ng-show="!isPublished(pet)"
    )
      .text Not Yet Published
      
    .inner(
      style="padding: 40px;"
    )
    h1 {{pet.name}}
    .cancel(
      ng-show="canCancel(pet)"
    )
      button.btn.btn-primary(
        ng-click="cancel($event, pet)"
      ) 
        i.fa.fa-ban
        | Cancel Subscription
  
